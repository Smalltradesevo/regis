    <script>
        // URL Parameter handling for referral codes
        function getUrlParameters() {
            const urlParams = new URLSearchParams(window.location.search);
            const pathSegments = window.location.pathname.split('/');
            
            // Handle URL patterns like /register/johndoe or ?ref=5551234567
            const referralCode = urlParams.get('ref') || urlParams.get('referral');
            const pathReferral = pathSegments[pathSegments.length - 1];
            
            return {
                referralCode: referralCode,
                pathReferral: pathReferral !== 'register' ? pathReferral : null,
                firstName: urlParams.get('fname'),
                lastName: urlParams.get('lname'),
                email: urlParams.get('email'),
                phone: urlParams.get('phone')
            };
        }

        // Pre-populate form from URL parameters
        function prePopulateForm() {
            const params = getUrlParameters();
            
            // Pre-fill form fields if data exists
            if (params.firstName) {
                document.getElementById('firstName').value = decodeURIComponent(params.firstName);
            }
            
            if (params.lastName) {
                document.getElementById('lastName').value = decodeURIComponent(params.lastName);
            }
            
            if (params.email) {
                document.getElementById('email').value = decodeURIComponent(params.email);
            }
            
            if (params.phone) {
                document.getElementById('mobilePhone').value = params.phone;
            }
            
            // Handle referral codes
            if (params.referralCode) {
                document.getElementById('referredBy').value = params.referralCode;
                showReferralInfo(params.referralCode);
            } else if (params.pathReferral) {
                // For URLs like /register/johndoe, lookup the agent's phone number
                lookupAgentByName(params.pathReferral);
            }
        }

        // Show referral information
        function showReferralInfo(referralCode) {
            const referralInfo = document.getElementById('referralInfo');
            const referrerName = document.getElementById('referrerName');
            
            // Here you would lookup the referrer's name from your database
            // For now, showing the referral code
            referrerName.textContent = referralCode;
            referralInfo.style.display = 'block';
            
            // Disable the manual input since it's auto-populated
            const referralInput = document.getElementById('referredBy');
            referralInput.value = referralCode;
            referralInput.style.backgroundColor = '#e8f5e8';
            referralInput.readOnly = true;
        }

        // Lookup agent by name (for /register/johndoe URLs)
        function lookupAgentByName(agentName) {
            // This would make an API call to your Lambda function to lookup agent
            // For now, simulating the lookup
            console.log('Looking up agent:', agentName);
            
            // Simulated response - replace with actual API call
            const mockAgentData = {
                'johndoe': '5551234567',
                'janedoe': '5559876543'
            };
            
            const agentPhone = mockAgentData[agentName.toLowerCase()];
            if (agentPhone) {
                showReferralInfo(agentPhone);
            }
        }

        // Toggle trade questions visibility
        function toggleTradeQuestions() {
            const checkbox = document.getElementById('inTrades');
            const tradeQuestions = document.getElementById('tradeQuestions');
            const tradeTypeSelect = document.getElementById('tradeType');
            
            if (checkbox.checked) {
                tradeQuestions.style.display = 'block';
                tradeTypeSelect.required = true;
            } else {
                tradeQuestions.style.display = 'none';
                tradeTypeSelect.required = false;
                // Clear trade-related fields
                document.getElementById('tradeType').value = '';
                document.getElementById('yearsInBusiness').value = '';
                document.getElementById('businessAddress').value = '';
            }
        }

        function toggleAgentBenefits() {
            const checkbox = document.getElementById('agentInterest');
            const benefits = document.getElementById('agentBenefits');
            
            if (checkbox.checked) {
                benefits.style.display = 'block';
            } else {
                benefits.style.display = 'none';
            }
        }

        // Phone number formatting
        function formatPhoneNumber(input) {
            let value = input.value.replace(/\D/g, '');
            if (value.length >= 6) {
                value = value.replace(/(\d{3})(\d{3})(\d{4})/, '$1-$2-$3');
            } else if (value.length >= 3) {
                value = value.replace(/(\d{3})(\d{0,3})/, '$1-$2');
            }
            input.value = value;
        }

        // Initialize form on page load
        document.addEventListener('DOMContentLoaded', function() {
            prePopulateForm();
            
            // Phone number formatting
            document.getElementById('mobilePhone').addEventListener('input', function(e) {
                formatPhoneNumber(e.target);
            });

            document.getElementById('referredBy').addEventListener('input', function(e) {
                if (!e.target.readOnly) {
                    formatPhoneNumber(e.target);
                }
            });
        });

        // Form submission
        document.getElementById('memberRegistrationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Add member type based on agent interest
            data.member_type = data.agentInterest ? 'referral_agent' : 'standard';
            
            // Clean phone numbers (remove dashes)
            data.mobilePhone = data.mobilePhone.replace(/\D/g, '');
            if (data.referredBy) {
                data.referredBy = data.referredBy.replace(/\D/g, '');
            }
            
            // Add referral tracking data
            data.referral_source = getUrlParameters().pathReferral ? 'agent_link' : 
                                  getUrlParameters().referralCode ? 'qr_code' : 'manual';
            
            console.log('Registration Data:', data);
            
            // Here you'll integrate with your AWS Lambda function
            submitToAWS(data);
        });

        // AWS Lambda submission function
        async function submitToAWS(data) {
            try {
                // Replace with your actual Lambda function URL
                const response = await fetch('YOUR_LAMBDA_ENDPOINT', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Registration successful! Welcome to Small Trades Evolution!');
                    // Redirect to welcome page or dashboard
                    window.location.href = '/welcome';
                } else {
                    throw new Error('Registration failed');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Registration failed. Please try again.');
            }
        }
    </script>
